    .slider-inline 
      .slider-inline__steps 
        .slider-inline__step.slider-inline--active(data-id="step-1")
          .slider-inline__number 1
          .slider-inline__text
            p.p.p--sm Das passende Thema finden

        .slider-inline__division

        .slider-inline__step(data-id="step-2")
          .slider-inline__number 2
          .slider-inline__text
            p.p.p--sm Die Gliederung erstellen

        .slider-inline__division
        
        .slider-inline__step(data-id="step-3")
          .slider-inline__number 3
          .slider-inline__text
            p.p.p--sm Die Facharbeit schreiben

        .slider-inline__division

        .slider-inline__step(data-id="step-4")
          .slider-inline__number 4
          .slider-inline__text
            p.p.p--sm Die Facharbeit überprüfen (lassen)

