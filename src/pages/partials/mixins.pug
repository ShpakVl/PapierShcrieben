mixin slide(id, isActive)
  if isActive
    - var classes = "slider--active"
  else 
    - var classes = ""
  
  .slider__slide(class= classes id= id)
    .slider__content
      if block 
        block
      else 
        p No info :(

mixin sliderList
  .slider__list_wrapper
    block

mixin slideInline
  block

mixin card(rating, avatarUrl, id, specialty)
  .card__wrapper
      .card
        .card__header
          .card__quote
            img(src="./img/quote.svg", alt="")
          .card__rating
            .card__number.text--light-gray= rating
            ul.card__list
              li.card__item
                img(src="./img/star.svg", alt="")
              li.card__item
                img(src="./img/star.svg", alt="")
              li.card__item
                img(src="./img/star.svg", alt="")
              li.card__item
                img(src="./img/star.svg", alt="")
              li.card__item
                img(src="./img/star.svg", alt="")

        .card__body
          block

        .card__footer
          .card__profile
            img.card__avatar(src=avatarUrl, alt="")
            p.p.p--sm.text--light-gray ID: #{id}
          .card__specialty
            p.p.p--sm.text--light-gray= specialty

mixin articleWrapper(reverse=false)
  if reverse
    - var classes = "article__wrapper--reverse"
  .article__wrapper(class=classes)
    block

mixin article(title="Untitled")
  .article__content
    .article__title
        h1.text--blue=title
    .article__text
        block
    
mixin articleInfo(imageUrl, note=false)
  .article__info
    img.article__img(src=imageUrl alt="Error")

    if note
      .note
        .note__header
            .note__icon
                img(src="./img/card-icon.svg", alt="card")
            .note__title
                h5.text--blue Merke:
        .note__content
            block

mixin articleFooter()
  .article__footer
    block
